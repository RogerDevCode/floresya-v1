{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/health",
      "dest": "api/server.js"
    },
    {
      "src": "/api-docs(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/pages/(.*)\\.html$",
      "headers": {
        "Content-Type": "text/html; charset=utf-8"
      },
      "dest": "/public/pages/$1.html"
    },
    {
      "src": "/pages/(.*)\\.js$",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "dest": "/public/pages/$1.js"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/public/pages/$1"
    },
    {
      "src": "/(.*\\.js)$",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.css)$",
      "headers": {
        "Content-Type": "text/css; charset=utf-8"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|svg|webp|ico))$",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.json)$",
      "headers": {
        "Content-Type": "application/json; charset=utf-8"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.html)$",
      "headers": {
        "Content-Type": "text/html; charset=utf-8"
      },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.js)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*\\.mjs)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
