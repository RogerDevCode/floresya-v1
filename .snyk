# Snyk Configuration for FloresYa
# https://docs.snyk.io/scan-application-code/snyk-code/cli-for-snyk-code/configure-the-snyk-cli

# Exclude patterns for security scanning
exclude:
  - node_modules/**
  - .git/**
  - .github/**
  - tests/**
  - coverage/**
  - cypress/**
  - .husky/**
  - .clinic/**

# Severity threshold for failing builds
severity-threshold: medium

# Code analysis settings
code:
  # Enable SAST (Static Application Security Testing)
  sast: true

  # Enable SCA (Software Composition Analysis)
  sca: true

# CLI settings
cli:
  # Output format
  json: true

  # Fail on issues
  fail-on: upgradable

# Testing settings
test:
  # Package manager
  package-manager: npm

  # Development dependencies
  dev: false

# Monitor settings
monitor:
  # Organization (set via SNYK_ORG environment variable)
  # org:

  # Project name
  project-name: floresya-v1

  # Remote repository URL
  remote-repo-url: https://github.com/RogerDevCode/floresya-v1